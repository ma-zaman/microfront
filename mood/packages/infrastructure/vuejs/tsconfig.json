{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "listFiles": true,
    "extendedDiagnostics": true,
    "traceResolution": true,

    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@mood/domain": ["../../domain/src"],
      "@mood/web-adapters": ["../../adapters/src"],
      "@/*": ["src/*"]
    }
  },
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.ts", "__tests__/**/*.ts", "src"],
  "exclude": ["node_modules"],
  "esModuleInterop": true,
  "sourceMap": true
}
